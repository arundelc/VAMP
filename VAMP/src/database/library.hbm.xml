<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="com.player.bll.Song" table="MusicLibrary">

    <id name="id" column="song_id">
      <generator class="native"/>
    </id>
    <property name="artist" column="artist"/>
    <property name="album" column="album"/>
    <property name="track" column="track_number"/>
    <property name="title" column="title"/>
    <property name="length" column="track_length"/>
    <property name="fileName" column="filename"/>
    <!--
    <many-to-one name="user" class="com.player.bll.UserAccount" column="user_id" cascade="all" not-null="true" />
    //-->
  </class>
</hibernate-mapping>
